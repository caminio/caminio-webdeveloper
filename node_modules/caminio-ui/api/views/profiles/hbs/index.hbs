<section class="plain-wrapper">

  <header>
    <div class="box title-box website">
      <div class="main-ctrl">
        <button {{action 'save'}} {{bind-attr class=":btn :icon-text isDirty:primary"}}>
          <i class="fa fa-check"></i>
          {{t 'done'}}
        </button>
        <button {{action 'changePassword'}} class="btn transparent borderless">
          {{t 'profile.change_password'}}
        </button>
        <div class="btn transparent dropdown borderless text-icon">
          <span class="dropdown-toggle" data-toggle="dropdown">
            {{t 'profile.change_lang'}}
            <i class="fa fa-angle-down"></i>
          </span>
          <ul class="dropdown-menu pull-right" role="menu">
            <li><a tabindex="-1" href="#" {{action setLang 'en'}}>{{t 'en'}}</a></li>
            <li><a tabindex="-1" href="#" {{action setLang 'de'}}>{{t 'de'}}</a></li>
          </ul>
        </div>
      </div>
      <h1>
        {{t 'profile.my'}}
      </h1>

    </div>

  </header>

  <div class="default-padding">

    <div class="row">
      <div class="col-md-3 align-right">
        
        <div class="main-avatar">
          <img class="img-thumbnail" {{bind-attr src='picUrl'}}>
        </div>

        <div class="avatar-actions">
          <a href="#" {{action 'changePic'}}>
            {{t 'profile.change_picture'}}
          </a>
          <div>
            {{#if remotePicUrl}}
              <br>
              {{t 'profile.currently_using_gravatar'}}
            {{else}}
              {{t 'or'}}
            {{/if}}
          </div>
          <a href="#" {{action 'useGravatar'}}>
            {{#if remotePicUrl}}
              {{t 'profile.stop_gravatar'}}
            {{else}}
              {{t 'profile.use_gravatar'}}
            {{/if}}
          </a>
        </div>

      </div>

      <div class="col-md-9 profile-info">

        <form class="caminio default-padding">

          <div class="row">
            <div class="form-group">
              <label class="big-label">{{t 'profile.your_name'}}</label>
              {{input valueBinding='statName' class="form-control" placeholderTranslation='profile.name_placeholder'}}
              <div class="help-block">{{t 'profile.will_be_exposed_to_others'}}</div>
            </div>

            <br>

            <div class="form-group">
              <label class="big-label">{{t 'profile.email'}}</label>
              {{input valueBinding='email' class="form-control"}}
            </div>

            <br>

            <div class="form-group">
              <label class="big-label">{{t 'profile.phone'}}</label>
              {{input valueBinding='phone' class="form-control"}}
            </div>
          </div>

        </form>

      </div>

    </div>

  </div>

</section>

{{outlet 'modal'}}

<div class="modal" id="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" {{action 'close'}}>
          <i class="fa fa-times"></i>
        </button>
        <h4 class="modal-title">{{t 'profile.change_password'}}</h4>
      </div>
      <div class="modal-body">
        <form class="caminio form-horizontal" {{action 'savePassword' on='submit'}}>

          <div class="row">
            <div class="form-group">
              <label class="control-label col-md-3">{{t 'profile.old_password'}}</label>
              <div {{bind-attr class=":col-md-9 oldPasswordError:field-with-error"}}>
                {{input type='password' valueBinding='oldPassword' class='form-control' id='old-password'}}
                {{#if oldPasswordError}}<div class="help-block">{{t 'missing_old_password'}}</div>{{/if}}
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <label class="control-label col-md-3">{{t 'profile.new_password'}}</label>
              <div {{bind-attr class=":col-md-9 newPasswordError:field-with-error"}}>
                {{input type='password' valueBinding='newPassword' class='form-control'}}
                {{#if newPasswordError}}<div class="help-block">{{t 'password_criteria'}}</div>{{/if}}
              </div>
            </div>
          </div>

          <input type="submit" class="hide">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" {{action 'close'}}>{{t 'cancel'}}</button>
        <button type="button" class="btn btn-primary" {{action 'savePassword'}}>{{t 'profile.change_password'}}</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<section class="main-wrapper">

  <header>
    <div class="box title-box website">
      <div class="main-ctrl">
        <button {{action goToDomains}} class="btn icon-text transparent borderless">
          <i class="fa fa-arrow-left"></i>
          {{t 'back'}}
        </button>
        <button class="btn primary icon-text" {{action 'save' domain}}>
          {{t 'save'}}
        </button>
      </div>
      <h1>{{domain.name}}</h1>

    </div>

  </header>

  <form class="caminio default-padding row" {{action 'save' domain on='submit'}}>

    <button type="submit" {{action 'save' domain}} style="opacity: 0"></button>
    <div class="col-md-6">
      {{partial 'domain/form'}}
    </div>
  </form>

</section>

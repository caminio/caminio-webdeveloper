<section class="main-wrapper">

  <header>
    <div class="box title-box admin">
      <div class="main-ctrl">
      
        {{#link-to 'users.new' class="btn primary icon-text"}}
          <i class="fa fa-plus"></i>
          {{t 'user.new'}}
        {{/link-to}}

        <div class="dropdown dropdown-hover as-btn">
          <button type="button" class="btn transparent borderless">
            <i class="fa fa-bars"></i>
          </button>
          <ul class="dropdown-menu adapt-width align-left pull-right">
            <li><a class="icon-text" href="#" {{action 'importCSV'}}><i class="fa fa-upload"></i>{{t 'users.import_csv'}}</a></li>
          </ul>
        </div>
      </div>

      <h1>{{t 'nav.users'}}</h1>

    </div>
  </header>

  <div class="default-padding">

    <table class="caminio">
      <thead>
        <tr>
          <th>{{t user.name}}</th>
          <th>{{t user.email}}</td>
          <th class="actions align-right"></th>
        </tr>
      </thead>

      <tbody>
      {{#each users}}
        {{#if inCurrentDomain}}
          <tr>
            <td {{action goToUser this on='doubleClick'}}>
              {{fullname}}
              {{#if isAdmin}}
                <span class="label label-danger"><i class="fa fa-gears"></i></span>
              {{/if}}
              {{#if isEditor}}
                <span class="label label-primary"><i class="fa fa-pencil"></i></span>
              {{/if}}
              {{#if apiUser}}
                <span class="label label-default">API</span>
              {{/if}}
            </td>
            <td {{action goToUser this on='doubleClick'}}>{{email}}</td>
            <td class="actions align-right">
              <div class="btn-group">
                <a class="btn small" {{action goToUser this}} {{translateAttr title='edit'}}>
                  <i class="fa fa-pencil"></i>
                </a>
              </div>
            </td>
          </tr>
        {{/if}}
      {{/each}}
      </tbody>
    </table>

  </div>

</section>

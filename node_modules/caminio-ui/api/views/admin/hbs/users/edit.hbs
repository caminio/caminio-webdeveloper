<section>

  <header>
    <div class="title-box admin">
      <div class="main-ctrl">
      
        <a href="#" {{action goToUsers}} class="btn icon-text transparent borderless">
          <i class="fa fa-arrow-left"></i>
          {{t back}}
        </a>
        <button class="btn icon-text transparent borderless" {{action sendLoginAgain this}}>
          <i class="fa fa-envelope-o"></i>
          {{t user.send_login_info}}
        </button>
        <button {{bind-attr class=":btn isDirty:primary"}} {{action create this}}>
          {{t user.save}}
        </button>

      </div>

      <h1>{{t 'user.edit'}}</h1>


    </div>
  </header>

  <form class="form-horizontal caminio user-form" {{action 'create' this on='submit'}}>

    <input type="submit" class="hide">
    {{partial 'user/form'}}

  </form>

</section>

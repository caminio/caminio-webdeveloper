doctype html
html(lang=i18n.locale())
  head
    title camin.io

    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(http-equiv="cleartype", content="on")
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    meta(name="application-name", content="caminio")
    meta(name='csrf-param', content=csrf)
    
    if env === 'production'
      link(rel='stylesheet', href='/stylesheets/caminio-ui.min.css')
    else
      link( rel='stylesheet', href='/stylesheets/3rdparty/bootstrap.css')
      link( rel='stylesheet', href='/stylesheets/3rdparty/opensans.css')
      link( rel='stylesheet', href='/stylesheets/3rdparty/font-awesome.css')
      link( rel='stylesheet', href='/stylesheets/3rdparty/select2.css' )
      link( rel='stylesheet', href='/stylesheets/3rdparty/morris-0.4.3.css' )

      link( rel='stylesheet', href='/stylesheets/caminio-ui/bootstrap-overrides.css' )
      link( rel='stylesheet', href='/stylesheets/caminio-ui/common.css' )
      link( rel='stylesheet', href='/stylesheets/caminio-ui/pace.css' )
      link( rel='stylesheet', href='/stylesheets/caminio-ui/form.css' )
      link( rel='stylesheet', href='/stylesheets/caminio-ui/tree.css' )
      link( rel='stylesheet', href='/stylesheets/caminio-ui/labels.css' )
      link( rel='stylesheet', href='/stylesheets/caminio-ui/table.css' )
      link( rel='stylesheet', href='/stylesheets/caminio-ui/side_panel.css' )
      link( rel='stylesheet', href='/stylesheets/caminio-ui/top_panel.css' )
      link( rel='stylesheet', href='/stylesheets/caminio-ui/loader.css' )
      link( rel='stylesheet', href='/stylesheets/caminio-ui/notifications.css' )
      link( rel='stylesheet', href='/stylesheets/caminio-ui/tabs.css' )
      link( rel='stylesheet', href='/stylesheets/caminio-ui/thumbnail-upload.css' )
      link( rel='stylesheet', href='/stylesheets/caminio-ui/main.css' )
  
    script(type='text/javascript').
      window.caminioHostname = '!{caminioHostname}';
      window.siteName = '!{site.name}';
      window.domainSettings = !{JSON.stringify(domainSettings)};
      window.siteConfig = !{JSON.stringify(site)};
      window.currentLang = '!{currentLang}';
      window.currentUser = !{JSON.stringify(currentUser)};
      window.currentDomain = !{JSON.stringify(currentDomain)};
      window.csrf = '!{csrf}';
      window.siteVersion = !{JSON.stringify(siteVersion)};
      window.caminioVersion = !{JSON.stringify(caminioVersion)};
    
    if env === 'production'
      script(type='text/javascript', data-pace-options='{ "ajax": true }', src='/javascripts/3rdparties.min.js')
      script(type='text/javascript', src='/javascripts/caminio.min.js')
    else
      script(type='text/javascript', src='/javascripts/3rdparty/jquery-1.10.2.js')
      script(type='text/javascript', src='/javascripts/3rdparty/handlebars-1.1.2.js')
    
      script(type='text/javascript', src='/javascripts/3rdparty/ember-1.5.1.js')
      script(type='text/javascript', src='/javascripts/3rdparty/ember-data-1.0.0-beta8.js')
      // foot scripts
      script(type='text/javascript', src='/javascripts/3rdparty/inflection.min.js')
      script(type='text/javascript', src='/javascripts/3rdparty/filesize.min.js')
      script(type='text/javascript', src='/javascripts/3rdparty/select2.min.js')
      script(type='text/javascript', src='/javascripts/3rdparty/typeahead.min.js')
      script(type='text/javascript', src='/javascripts/3rdparty/ember-i18n.js')
      script(type='text/javascript', src='/javascripts/3rdparty/masonry.min.js')
      script(type='text/javascript', src='/javascripts/3rdparty/raphael-2.1.0.min.js')
      script(type='text/javascript', src='/javascripts/3rdparty/morris-0.4.3.min.js')
      script(type='text/javascript', src='/javascripts/3rdparty/jquery.nicescroll.min.js')
      script(type='text/javascript', src='/javascripts/caminio/locales/#{currentLang}.js')
      script(type='text/javascript', src='/javascripts/3rdparty/jquery-ui-1.10.4.custom.min.js')
      script(type='text/javascript', src='/javascripts/3rdparty/jquery-ui-datepicker.de.js')
      script(type='text/javascript', data-pace-options='{ "ajax": true }', src='/javascripts/3rdparty/pace.min.js')
      script(type='text/javascript', src='/javascripts/3rdparty/bootstrap.min.js')
      script(type='text/javascript', src='/javascripts/3rdparty/bootstrapbox.min.js')
      script(type='text/javascript', src='/javascripts/3rdparty/moment.min.js')
      script(type='text/javascript', src='/javascripts/3rdparty/jquery.sparkline.min.js')
      script(type='text/javascript', src='/javascripts/3rdparty/jquery.block-ui.js')
      script(type='text/javascript', src='/javascripts/3rdparty/md5.js')
      script(type='text/javascript', src='/javascripts/caminio/util.js')
      script(type='text/javascript', src='/javascripts/caminio/tabs.js')
      script(type='text/javascript', src='/javascripts/caminio/pickers.js')
      script(type='text/javascript', src='/javascripts/caminio/helpers/date_helper.js')
      script(type='text/javascript', src='/javascripts/caminio/helpers/operators_helper.js')

      script(type='text/javascript', src='/javascripts/caminio/app-core.js')
      script(type='text/javascript', src='/javascripts/caminio/views/select2_extensions.js')
      script(type='text/javascript', src='/javascripts/caminio/views/codemirror_extension.js')
      script(type='text/javascript', src='/javascripts/caminio/table_controller.js')
      script(type='text/javascript', src='/javascripts/caminio-ui/models/client.js')
      script(type='text/javascript', src='/javascripts/caminio/models/mediafile.js')
      script(type='text/javascript', src='/javascripts/caminio/models/user.js')
      script(type='text/javascript', src='/javascripts/caminio/models/label.js')
      script(type='text/javascript', src='/javascripts/caminio/labels.js')

      script(type='text/javascript', src='/javascripts/caminio/notifications.js')

    block head

  body

    aside#notifications.notifications

    script(type="text/x-handlebars")
      include ../common/top_panel

    script(type='text/x-handlebars', data-template-name='navbar-accounts')
      include ../common/hbs/navbar_accounts.html

    block content

    block foot

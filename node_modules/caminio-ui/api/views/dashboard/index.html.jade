extends ../layouts/application

append head
  if env === 'production'
    link( rel='stylesheet', href='/stylesheets/caminio-dashboard.min.css' )
  else
    link( rel='stylesheet', href='/stylesheets/caminio-dashboard/dashboard.css' )

block content

  aside#notifications.notifications

append foot
  if env === 'production'
    script(type='text/javascript', src='/javascripts/caminio-dashboard.min.js')
  else
    script(type='text/javascript', src='/javascripts/caminio-dashboard/models/micro_note.js')
    script(type='text/javascript', src='/javascripts/caminio-dashboard/locales/#{currentLang}.js')
    script(type='text/javascript', src='/javascripts/caminio-dashboard/router.js')
           
  script(type="text/x-handlebars", data-template-name='navbar')
    include hbs/navbar.hbs

  script(type="text/x-handlebars" data-template-name="index")
    include hbs/index.hbs


extends ../layouts/authorization

block content

  .login-box-wrap
    section.login-box
      form.auth.clearfix( action='/caminio/accounts/'+userId+'/reset/'+key, method='post' )

        if message
          if message.info
            .message!=message.info
          if message.error
            .message.error!=message.error
        else
          .message=t('auth.enter_new_password')
      
        .row-wrap
          .row

            .password-container.col-md-5
              input(type='password', placeholder=t('auth.password'), name='password' )
            .password-container.col-md-5
              input(type='password', placeholder=t('auth.confirm_password'), name='password_confirm' )
            .col-md-2
              button.btn.primary(type='submit', title=t('login'))
                i.fa.fa-arrow-right

        input(type='hidden', name='_csrf', value=csrf)
        section.meta-wrap.row
          a(href='/caminio/login')=t('back_to_login')

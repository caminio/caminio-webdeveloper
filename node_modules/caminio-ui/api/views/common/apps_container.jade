.apps-container
  each app in allowedApps
    if( (!app.requireAdmin || currentUser.isAdmin( currentDomain ) ) && (!app.requireEditor || currentUser.isEditor( currentDomain ) ) && (!app.requireTrusted || currentUser.isTrusted( currentDomain ) ) )
      a.app-item( href=app.path, class=(app.name === controllerName.replace('controller','').toLowerCase() ? 'active' : '')+' '+app.name )
        i.fa(class=app.icon)
        .title=(app.i18n[currentLang] || app.title)
  if currentUser.isAdmin( currentDomain )
    a.app-item( href='/caminio/admin', class=('admin' === controllerName.replace('controller','').toLowerCase() ? 'active' : '')+' admin' )
      i.fa.fa-cogs
      .title(data-translate='apps.settings')
  if currentUser.superuser
    a.app-item( href='/caminio/admin#/domains', class=('admin' === controllerName.replace('controller','').toLowerCase() ? 'active' : '')+' admin' )
      i.fa.fa-cogs
      .title(data-translate='apps.domains')

    

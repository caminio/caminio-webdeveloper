extends ../../../layouts/authorization

block content

  .login-box-wrap
    section.login-box
      form.auth.clearfix( action='/caminio/initial_setup', method='post' )

        if message
          if message.info
            .message=message.info
          if message.error
            .message.error=message.error

        .row-wrap(style='padding-top:20px')
          .row
            .domain-container.col-md-12
              label.control-label=t('setup.name')
              input(type='text',name='camDomainName',placeholder=t('setup.domain_name_desc') )
          .row
            .col-md-12.email-container
              label.control-label=t('setup.choose_email')
              input(type='text', name='email', placeholder=t('auth.email_address'), autocapitalize='off', autocorrect='off' )
          .row
            .col-md-12.password-container
              label.control-label=t('setup.choose_pwd')
              input(type='password', name='password', placeholder=t('auth.password') )

          .row(style='margin:20px')
            .col-md-12.align-right
              button.btn.primary.text-icon(type='submit')
                =t('setup.create')
                i.fa.fa-arrow-right
            input(type='hidden', name='_csrf', value=csrf)
        section.meta-wrap.row
          a(href='/login')=t('back_to_login')

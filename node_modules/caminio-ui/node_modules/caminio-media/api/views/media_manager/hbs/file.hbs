<div {{bind-attr title='content.name'}}
     {{bind-attr data-id='content.id'}}
     {{bind-attr class=":media-item :file :clearfix isCurrent:selected isHidden:is-hidden"}}
     {{bind-attr style="content.getBackgroundImage"}}
     {{action 'showFileDetails' content}}>
  <div class="spacer">
    {{#if content.isImage}}
      {{#if content.isTeaser}}
        <i class="fa fa-star"></i>
      {{/if}}
      {{#if content.isHidden}}
        <i class="fa fa-eye-slash"></i>
      {{/if}}
    {{else}}
      <i class="fa fa-file-o"></i>
    {{/if}}
  </div>
  <div class="caption">
    <div class="size">{{content.humanSize}}</div>
    <div class="filename">{{content.name}}</div>
  </div>
</div>

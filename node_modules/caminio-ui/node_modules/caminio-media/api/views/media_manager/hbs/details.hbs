<div class="box-title">

  <span class="btn close" {{action cancelClose}}><i class="fa fa-times"></i></span>

  <div class="btn-group pull-right">
    <button class="btn icon-text highlight-danger"
            {{action 'removeFile' curFile}}>
      <i class="fa fa-trash-o"></i> {{t 'delete'}}
    </button>
    <button {{bind-attr class=":save :btn :icon-text curFile.isDirty:primary"}}
            {{action 'saveFile' curFile}}>
      <i class="fa fa-save"></i> {{t 'save'}}
    </button>
  </div>

  <strong>{{curFile.name}}</strong>
  {{t 'properties'}}

</div>

<form class="caminio default-padding form-horizontal" {{action saveFile}}>

  <div class="row">

    <div class="form-group">
      <label class="control-label col-md-3">{{t 'file.name'}}</label>
      <div class="col-md-9">
        {{input type='text' valueBinding='curFile.name' class='form-control'}}
        <div class="desc row">
          <div class="col-md-6">
            <span>{{t 'file.content_type'}}:</span>
            <strong>{{curFile.contentType}}</strong>
          </div>
          <div class="col-md-6">
            <span>{{t 'file.size'}}:</span>
            <strong>{{curFile.humanSize}}</strong>
          </div>
        </div>
        <div class="desc row">
          <div class="col-md-6">
            <span>{{t 'created'}}:</span>
            <strong>{{curFile.createdBy.fullname}}</strong>
          </div>
          <div class="col-md-6">
            <span>{{t 'date'}}:</span>
            <strong>{{formatDate curFile.createdAt format='DD MM YYYY HH:mm'}}</strong>
          </div>
        </div>
        </div>
      </div>
    </div>


    <div class="form-group">
      <label class="control-label col-md-3">{{t 'file.description'}}</label>
      <div class="col-md-9">
        {{input type='text' valueBinding='curFile.description' class='form-control' }}
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-md-3">{{t 'file.copyright'}}</label>
      <div class="col-md-9">
        {{input type='text' valueBinding='curFile.copyright' class='form-control' }}
      </div>
    </div>

  </div>

  <div class="default-padding">
    {{#each curFile.thumbnails}}
      <div class="detail-thumbnail">
        {{this}}
      </div>
    {{/each}}

  </div>

</form>
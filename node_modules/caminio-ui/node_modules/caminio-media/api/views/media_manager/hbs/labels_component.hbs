<div class="box default-padding margin-top">

  <button class="btn pale pull-right new-label-btn" 
          {{action editLabel}}
          {{translateAttr title='labels.new'}}>
    <i class="fa fa-plus"></i>
  </button>
  
  <h4 class="mini-title">{{t 'labels.title'}}</h4>

  {{#if hasSelectedMediaItems}}
    <div class="add-to-label-desc">
      <strong>{{t 'label.add_selected_items'}}:</strong>
    </div>
  {{/if}}

  <ul class="labels-list">
    {{#each labels}}
      <li {{bind-attr class="hide:pale active:active"}} {{bind-attr data-id=id}}>
        <span {{bind-attr class=":color private:private"}} {{bind-attr data-private='private'}} 
                            {{action editLabel this}} 
                            {{bind-attr style='styleAttrs'}}></span>
        <button class="btn transparent small pull-right highlight-danger remove-label" 
                {{translateAttr title='label.delete'}}
                {{action removeLabel this}}>
          <i class="fa fa-trash-o"></i>
        </button>
        <span class="label-title" {{action showLabelContactsOrAddLabel this}}>{{name}}</span>
      </li>
    {{/each}}
  </ul>

</div>
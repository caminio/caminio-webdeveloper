{{#if asDialog}}
<div class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">{{t 'media_manager.title'}}</h4>
  </div>
  <div class="modal-body clearfix">
{{/if}}
    <div class="media-manager">

      <div class="col-md-12">

        <div class="row">
          
          <div class="col-md-6">

            <div class="box fill-box default-padding">
              <div class="clearfix">
                <div class="btn-toolbox pull-right">

                  <div class="btn-group">
                    <button class="btn">
                      <i class="fa fa-square-o" {{translateAttr title='select_all'}}></i>
                    </button>
                  </div>

                  <div class="btn-group">
                    <button class="btn">
                      <i class="fa fa-trash-o" {{translateAttr title='delete_selected'}}></i>
                    </button>
                  </div>

                  <div class="btn-group">
                    <button class="btn">
                      <i class="fa fa-cut" {{translateAttr title='cut'}}></i>
                    </button>
                    <button class="btn">
                      <i class="fa fa-copy" {{translateAttr title='copy'}}></i>
                    </button>
                    <button class="btn">
                      <i class="fa fa-paste" {{translateAttr title='paste'}}></i>
                    </button>
                  </div>

                </div>

                <div class="breadcrumbs">
                  {{#if breadcrumbs}}
                    <button class="btn back-btn" {{action 'goLevelBack'}}>
                      <i class="fa fa-angle-left"></i>
                    </button>
                  {{/if}}
                  <a class="entry btn" href="#" {{action 'goToRootLevel'}}>
                    /
                  </a>
                  {{#each breadcrumbs}}
                    <a class="entry btn" href="#" {{action 'goToLevel' this}}>
                      {{name}}
                    </a>
                  {{/each}}
                </div>
              </div>

              <h4 class="mini-title">
                {{t 'media.labels.title'}}
              </h4>
            
              <div class="media-items clearfix">
                {{#each labels itemController='media_label_item'}}
                  {{partial 'media_manager/label'}}
                {{/each}}
              </div>

              <h4 class="mini-title">
                {{t 'media.webpages.title'}}
              </h4>
            
              <div class="media-items clearfix">
                {{#each webpages itemController='media_label_item'}}
                  {{partial 'media_manager/label'}}
                {{/each}}
              </div>

              <h4 class="mini-title">
                {{t 'media.files.title'}}
              </h4>
            
              <div class="media-items clearfix">
                {{#each mediafiles itemController='mediafile'}}
                  {{partial 'media_manager/file'}}
                {{/each}}
              </div>

            </div>
          </div>

          <div class="col-md-6">
            <div class="details-container box" id="dropzone">

              {{#if curFile}}
                {{partial 'media_manager/details'}}
              {{else}}
                {{partial 'media_manager/upload-container'}}
              {{/if}}

            </div>

          </div>

        </div>
      </div>

    </div>
{{#if asDialog}}
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">{{t 'close'}}</button>
    <button type="button" {{bind-attr class=":btn curFile:primary"}} {{action insertImage}}>{{t 'media.insert_selected'}}</button>
  </div>
</div><!-- /.modal-content -->
{{/if}}
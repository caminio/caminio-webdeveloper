<section class="main-wrapper">

  <header>
    <div class="box title-box websites">
      <div class="main-ctrl">
      </div>

      <h1>{{t 'media_manager.title'}}</h1>

    </div>
  </header>

  <div class="row span-row">

    <div class="col-md-4">
      
      {{mediafile-labels}}

    </div>

    <div class="col-md-8">

      <div class="box details-container default-margin">
        <div class="progress progress-striped" id="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
            <span class="sr-only"><span class="perc-text">60%</span> {{t 'perc_completed'}}</span>
          </div>
        </div>

        <div class="box-title">
          <div class="btn-toolbox">
            
            <div class="btn-group pull-right">
              <div id="fileupload" class="btn icon-text">
                <i class="fa fa-save"></i>
                {{t 'media.upload'}}
                <input id="fileupload" type="file" name="files[]" data-url="/caminio/mediafiles" multiple>
              </div>
            </div>

            <div class="btn-group">
              <button class="btn">
                <i class="fa fa-trash-o" {{translateAttr title='delete_selected'}}></i>
              </button>
            </div>

            <div class="btn-group">
              <button class="btn">
                <i class="fa fa-cut" {{translateAttr title='cut'}}></i>
              </button>
              <button class="btn">
                <i class="fa fa-copy" {{translateAttr title='copy'}}></i>
              </button>
              <button class="btn">
                <i class="fa fa-paste" {{translateAttr title='paste'}}></i>
              </button>
            </div>

          </div>
        </div>

        <table class="mediafiles">
          <thead>
            <tr>
              <th><i class="fa fa-square-o" {{translateAttr title='select_all'}}></i></th>
              <th>{{t 'name'}}</th>
              <th>{{t 'file.size'}}</th>
              <th>{{t 'file.actions'}}</th>
            </tr>
          </thead>
          <tbody>
            {{#each model}}
              <tr>
                <td>
                  <i class="fa fa-square-o"></i>
                </td>
                <td>{{name}}</td>
                <td>{{humanSize}}</td>
                <td>
                  <button class="btn"
                    {{action remove this}}
                    {{translateAttr title='file.remove'}}>
                    <i class="fa fa-trash-o"></i>
                  </button>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>

      </div>

    </div>

  </div>

</section>
doctype html
html(lang=en)
  head
    title=currentDomain.name
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
    meta(name="description", content=translation.metaDescription)
    meta(name='author', content=currentUser.fullname)
  body
    .main  
      h1 {{ pebble: test }}  
      .ul 
      each sibling in siblings
        li= sibling.name
      each ancestor in ancestors
        li= ancestor.name
      each child in children
        li= child.name
      h1 Welcome to your website
      !=markdownContent
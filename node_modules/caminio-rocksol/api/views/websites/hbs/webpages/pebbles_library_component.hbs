
<div id='pebbles-library' class='modal fade'>
  <div class="modal-dialog" style="width: 80%">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">{{t 'pebbles.title'}}</h4>
      </div>
      <div class="modal-body clearfix">

        <div class="media-manager">

          <div class="col-md-12">

            {{#unless curPebble}}

              <div class="row">
                
                <div class="col-md-6">

                  <div class="box">

                    <div class="row default-padding">
                    
                      <ul class="pebbles-list">
                        {{#each pebbles}}
                          <li {{action showPebble this}}>
                            <i {{bind-attr class=":fa getIcon"}}></i>
                            {{!-- {{tKey name prefix='pebbles'}} --}}
                            {{name}}
                          </li>
                        {{/each}}
                      </ul>

                    </div>

                  </div>
                </div>

              </div>

            {{else}}
        
              {{#equal 'teaser' curPebble.type }}
                {{partial 'pebble_type_teaser'}}
              {{/equal}}
            
              {{#equal 'text' curPebble.type }}
                {{view App.PebblePluginTextView}}
              {{/equal}}

              {{#equal 'events' curPebble.type }}
                {{view App.PebblePluginEventsView}}
              {{/equal}}

              {{#equal 'video' curPebble.type }}
                {{view App.PebblePluginVideoView}}
              {{/equal}}

            {{/unless}}

          </div>

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{t 'close'}}</button>
        <button type="button" {{bind-attr class=":btn curPebble.canInsert:primary:disabled"}} {{action insertPebble}}>{{t 'pebble.insert_selected'}}</button>
      </div>
    </div>
  </div><!-- /.modal-dialog -->
</div>
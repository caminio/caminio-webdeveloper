<div class="box pebble-box clearfix">

  <!-- box title -->
  <div class="box-title">

    <div class="btn-toolbar pull-right">

      <div class="btn-group">
        <button {{bind-attr class=":save :btn :icon-text curPebbleTranslation.isDirty:primary:disabled"}}
                {{action savePebble}}>
          <i class="fa fa-save"></i> {{t 'save'}}
        </button>
        <button class="btn icon-text" {{action cancelClosePebble}}>
          <i class="fa fa-arrow-left"></i>
          {{t 'back'}}
        </button>
      </div>

    </div>

    <strong>{{curPebble.name}}</strong>

  </div>
  <!-- box title -->

  <div class="pebble-plugin-text" id="plugin-text-editor-wrap">
    
    <div class="features">

      <section id="pebble-plugin-text-editor" class="editor">
        <div class="outer">
          <section class="entry-markdown">
            <header class="floatingheader">
              <div class="btn-toolbar">
                <div class="btn-group">
                  <button class="btn" {{action replaceText 'heading'}}
                                      {{translateAttr title='editor.heading'}}>
                    <i class="fa fa-text-height"></i>
                  </button>
                </div>
                <div class="btn-group">
                  <button class="btn" {{action replaceText 'bold'}}
                                      {{translateAttr title='editor.bold'}}>
                    <i class="fa fa-bold"></i>
                  </button>
                  <button class="btn" {{action replaceText 'italic'}}
                                      {{translateAttr title='editor.italic'}}>
                    <i class="fa fa-italic"></i>
                  </button>
                  <button class="btn" {{action replaceText 'underline'}}
                                      {{translateAttr title='editor.underline'}}>
                    <i class="fa fa-underline"></i>
                  </button>
                </div>
                <div class="btn-group">
                  <button class="btn" {{action openMediaLibrary this}}
                                      {{translateAttr title='editor.image'}}>
                    <i class="fa fa-picture-o"></i>
                  </button>
                  <button class="btn" {{action openPebblesLibrary this}}
                                      {{translateAttr title='editor.pebbles'}}>
                    <i class="fa fa-th"></i>
                  </button>
                  <button class="btn" {{action openLinkLibrary}}
                                      {{translateAttr title='editor.link'}}>
                    <i class="fa fa-chain"></i>
                  </button>
                </div>
              </div>
            </header>
            
            <section class="entry-markdown-content">
              <textarea class="input-area" id="editor-input-content">content cannot be loaded</textarea>
            </section>
          </section>
          <section class="entry-preview active">
            <header class="floatingheader">
              {{t 'preview'}}<span class="entry-word-count">0</span>
            </header>
            <section class="entry-preview-content">
              <div class="rendered-markdown"></div>
            </section>
          </section>
        </div>
      </section>

    </div>

  </div>

</div>
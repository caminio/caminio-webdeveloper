<div class="box pebble-box clearfix">

  <!-- box title -->
  <div class="box-title">

    <div class="btn-toolbar pull-right">

      <div class="btn-group">
        {{#if curPebbleActivity}}
          <button {{bind-attr class=":save :btn :icon-text curPebbleActivity.isDirty:primary"}}
                  {{action saveActivity}}>
            <i class="fa fa-save"></i>
            {{t 'save'}}
          </button>
        {{/if}}
        <button class="btn icon-text" {{action cancelClosePebble}}>
          <i class="fa fa-arrow-left"></i>
          {{t 'back'}}
        </button>
      </div>

    </div>

    <strong>{{curPebble.name}}</strong>

  </div>

  <div class="row">

    <div class="col-md-6">
      <ul class="activities">
        {{#each sortedActivities itemController='activities'}}
          <li {{action editActivity content}} {{bind-attr class="isCurrentActivity:active"}}>
            <button class="btn pale pull-right highlight-danger" {{action removeActivity content}}
                    {{translateAttr title='pebble.remove_activity'}}>
              <i class="fa fa-trash-o"></i>
            </button>
            <i class="fa fa-clock-o"></i>
            {{formatDate content.startsAt format='dd, DD. MMM HH:mm'}}
            {{#if content.locationObj}}
              <span class="location">
                <i class="fa fa-map-marker"></i>
                {{content.locationObj.name}}
              </span>
            {{/if}}
            &nbsp;
          </li>
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6">

      <div class="form-group">
        <div class="row">
          <div class="col-md-5">
            <div id="activity-datepicker"></div>
          </div>

          <div class="col-md-6">
            <label>{{t 'activity.time'}}</label>
            <div class="input-group bootstrap-timepicker"  />
              <input id="activity-timepicker" type="text" class="form-control" />
              <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
            </div>

            <div class="form-group">
              <label>{{t 'activity.note'}}</label>
              {{textarea
                      value=curPebbleActivity.note
                      class="form-control"}}
            </div>

            <div class="form-group clearfix">
              <label>{{t 'activity.seats'}}</label>
              {{input type="text"
                      value=curPebbleActivity.seats
                      class="form-control seats"}}
            </div>

            <div class="form-group clearfix">
              <label>{{t 'activity.location'}}</label>
              <p>
                <button class="btn pull-right" {{action 'openLocationsModal'}}>
                  <i class="fa fa-map-marker"></i>
                </button>
                {{#if curPebbleActivity.location}}
                  <strong>{{curPebbleActivity.locationObj.name}}</strong>
                {{/if}}
              </p>

            </div>

          </div>


        </div>
      </div>

    </div>

  </div>

</div>